<html>
<head>
    <title>Oops!!</title>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script	src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
</head>
<style>
    body { background-image: url(data:image/png;base64,);}
    .error-template {padding: 40px 15px;text-align: center;}
    .error-actions {margin-top:15px;margin-bottom:15px;}
    .error-actions .btn { margin-right:10px; }
</style>
<body ng-app="myapp" ng-controller="mycontroller">
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="error-template">
                <h1>
                    Oops!</h1>
                <h2>
                    You are not a host yet.!</h2>
                <div class="error-details">
                    In order to become host, press request admin. The approval of admin will be notified on your user dashboard. If you wish not to become host, then press Return to Home
                </div>
                <div class="error-actions">
                    <a href="#" ng-click="homepage()" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        Take Me Home </a><a href="#" ng-click="adminrequest()" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-envelope"></span> Request Admin </a>
                </div>
            </div>
        </div>
    </div>
</div>

</body>
<script>
var app=angular.module("myapp",[]);
    app.controller("mycontroller",function($scope,$http){

        console.log("inside host_request page");

        $scope.homepage=function()
        {
            window.location.assign("/homepage");
        }

        $scope.adminrequest=function()
        {

            $http({
                method:'get',
                url:'/adminrequest'

            }).success(function mysuccess(response){
                console.log(response);
                if(response.statusCode==200)
                {
                    window.alert("request sent successfully");
                    window.location.assign("/homepage");
                }
                else
                {
                    window.alert("Some error occured");
                    window.location.assign("/homepage");
                }

            }).error(function myerror(err){
                console.log(err);
            });

        }

    });

</script>

</html>